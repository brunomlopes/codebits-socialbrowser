<?xml version="1.0"?>
<configuration>

    <system.web>
        <compilation debug="true" targetFramework="4.0" />
    </system.web>
    <system.webServer>
      <modules runAllManagedModulesForAllRequests="true"/>
    </system.webServer>

    <system.serviceModel>
        <serviceHostingEnvironment aspNetCompatibilityEnabled="true" />
        <services>
            <service name="SoBrow.Web.Service">
                <endpoint address="" behaviorConfiguration="SoBrow.Web.ServiceAspNetAjaxBehavior"
                    binding="webHttpBinding" contract="SoBrow.Web.Service" />
            </service>
        </services>
        <behaviors>
            <endpointBehaviors>
                <behavior name="SoBrow.Web.ServiceAspNetAjaxBehavior">
                  <webHttp />
                </behavior>
            </endpointBehaviors>
            <serviceBehaviors>
                <behavior name="">
                    <serviceMetadata httpGetEnabled="true" />
                    <serviceDebug includeExceptionDetailInFaults="true" />
                </behavior>
            </serviceBehaviors>
          </behaviors>
    </system.serviceModel>
</configuration>